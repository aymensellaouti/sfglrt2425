{% extends 'third/layout.html.twig' %}

{% block body %}
    <div class="alert alert-danger">
        Person List
    </div>
    <ol class="list-group">
        {% for person in persons %}
        <li class="list-group-item">
            {{ person.name }} {{ person.age }}
            <a href="{{ path('delete_person', {id: person.id}) }}">
                X
            </a>
        </li>
        {% endfor %}
    </ol>
{% endblock %}

